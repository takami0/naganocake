<h2>ログイン</h2>

<h4>会員の方はこちらからログイン</h4>
<%= form_with model: @customer, url: customer_session_path do |f| %>
  <!--<div class="field">-->
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>
  <!--</div>-->

  <!--<div class="field">-->
    <%= f.label "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %><br>
  <!--</div>-->

  <!--<div class="actions">-->
    <%= f.submit "ログイン" %>
  <!--</div>-->
<% end %>

<h4>会員登録がお済みでない方</h4>
<p>
  <%= link_to "こちら", new_customer_registration_path %>  から新規登録を行なってください。
</p>

<%#= render "public/shared/links" %>
